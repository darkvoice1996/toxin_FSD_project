doctype html
html(lang="en")
    head
        title Toxin
        meta(charset="UTF-8")
        meta(name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(meta http-equiv="X-UA-Compatible" content="ie=edge")
    body
    include import-mixins
    .ui-kit
        +header(true)
        br
        br
        br
        +header(false)
        br
        br
        br
        include common.block/footer/footer
        br
        br
        br
        include common.block/comment/comment
        // CARDS
        .ui-kit__cards
            include common.block/card/card__signup
            include common.block/card/card__login
            include common.block/card/card__filter
            include common.block/book-room/book-room
            include common.block/room-card/room-card

        .ui-kit__container
            .ui-kit__box
                +title('COLORS')
                .ui-kit__color-item.dark_s100 $dark_s100
                .ui-kit__color-item.dark_s75 $dark_s75
                .ui-kit__color-item.dark_s50 $dark_s50
                .ui-kit__color-item.dark_s25 $dark_s25
                .ui-kit__color-item.dark_s10 $dark_s10
                .ui-kit__color-item.dark_s5 $dark_s5
                .ui-kit__color-item.purple $purple
                .ui-kit__color-item.green $green
                .ui-kit__color-item.gradient_purple $gradient_primary
                .ui-kit__color-item.gradient_green $gradient_secondary
            .ui-kit__box
                +title('TYPOGRAPHY')
                p.ui-comment +title('')
                +title(`This one is the sub-section or widget title.`)
                hr
                p.ui-comment +subtitle('')
                +subtitle("Next one is the item title inside widgets.")
                hr
                p.ui-comment +label('')
                +label("This is a label or CTA text.")
                hr
                p.ui-comment +text('')
                +text("This is the body text which is used for most of the design, like paragraphs, lists, etc.")

            .ui-kit__box
                +title('BUTTONS')
                p.ui-comment +btn('button')
                +btn('button')
                p.ui-comment +btn_white('button')
                +btn_white('button')
                p.ui-comment +btn_minimal('button')
                +btn_minimal('button')
                p.ui-comment +btn_send('Отправить')
                +btn_send('Отправить')
                p.ui-comment +rate-button
                +rate-button

            // INPUTS
            .ui-kit__box
                +title('Inputs')
                p.ui-comment +input('example', 'text field', 'Email')
                +input('example', 'text field', 'Email')

                p.ui-comment +input_subscription('example', 'subscription text field')
                +input_subscription('example', 'subscription text field')

                p.ui-comment +input_masked(8445, 'masked text field')
                +input_masked(8445, 'masked text field')

                p.ui-comment Date-dropdown with 2 dates
                .date-dropdown__container
                    .date-dropdown__item
                        label(for="checkOut").label.input__label Date-dropdown
                        input(type="text" id="checkOut" name="checkIn" placeholder="ДД.ММ.ГГГГ" spellcheck="false").datepicker-here.date-period-picker__item.input.input__dropdown.date-dropdown__input
                    .date-dropdown__item
                        label(for="checkIn").label.input__label Date-dropdown
                        input(type="text" id="checkIn" name="checkOut" placeholder="ДД.ММ.ГГГГ" spellcheck="false").datepicker-here.date-period-picker__item.input.input__dropdown.date-dropdown__input



                p.ui-comment Date Dropdown Period
                label(for="DatesOfStay").label.input__label Даты пребывания в отеле
                input(type="text" id="DatesOfStay" name="DatesOfStay"
                    placeholder="ДД.ММ.ГГГ"
                    data-range="true"
                    data-multiple-dates-separator=" - "
                    data-toggle-selected="false"
                    spellcheck="false").input.input__dropdown.input_narrow.datepicker-here.input_narrow

            // DROPDOWNS
            .ui-kit__box
                +title('Dropdowns')
                p.ui-comment dropdown__guests
                include common.block/dropdown/dropdown__guests

                p.ui-comment dropdown__rooms
                include common.block/dropdown/dropdown__rooms

                ul.bullet-list
                    +label('bullet list')
                    li.bullet-list__item Нельзя с питомцами
                    li.bullet-list__item Без вечеринок и мероприятий
                    li.bullet-list__item Время прибытия — после 13:00, a выезд до 12:00


                include common.block/room-feature/room-feature
                include common.block/expandable-block/expandable-block

                +expandable-block('expandable checkbox list')
                    label(for="breakfast").checkbox__item
                        input(type="checkbox" id="breakfast" name="breakfast")
                        .checkbox__custom-input
                        .checkbox__text Завтрак
                    label(for="writingDesk").checkbox__item
                        input(type="checkbox" id="writingDesk" name="writingDesk")
                        .checkbox__custom-input
                        .checkbox__text Письменный стол
                    label(for="babyChair").checkbox__item
                        input(type="checkbox" id="babyChair" name="babyChair")
                        .checkbox__custom-input
                        .checkbox__text Стул для кормления
                    label(for="babyBed").checkbox__item
                        input(type="checkbox" id="babyBed" name="babyBed")
                        .checkbox__custom-input
                        .checkbox__text Кроватка
                    label(for="TV").checkbox__item
                        input(type="checkbox" id="TV" name="TV")
                        .checkbox__custom-input
                        .checkbox__text Телевизор
                    label(for="shampoo").checkbox__item
                        input(type="checkbox" id="shampoo" name="shampoo")
                        .checkbox__custom-input
                        .checkbox__text Шампунь

            // Form  buttons
            .ui-kit__box
                +title("Form buttons")
                //p.ui-comment +checkbox("Checkbox")
                //+checkbox("Checkbox")

                include common.block/checkbox/checkbox
                include common.block/checkbox/checkbox_rich

                //+checkbox('rich checkbox')
                //    +checkbox-rich__item('ch1r', 'ch1r', 'Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')
                //    +checkbox-rich__item('ch2r', 'ch2r', 'Помощник для инвалидов', 'На 1 этаже вас встретит специалист  и проводит до номера.')

                +radio-button("ui_radio")

                p.ui-comment toggle-button("toggle_dfdf", "Получать спецпредложения")
                +toggle-button("toggle_dfdf", "Получать спецпредложения")

                +like-button


            // PAGINATION
            .ui-kit__box
                #pagination-data-container There will be page content
                .pagination
                    #pagination-bar
                    .pagination__footer.text 1 - 12 из 100+ вариантов аренды






mixin input(name, placeholder)
    input.input(type="text" id=id name=name placeholder=placeholder)

mixin input_subscription(id)
    .input-subscription__wrapper
        input.input.input-subscription__input.input_narrow(type="email" id=id placeholder="Email")
        i.material-icons.input-subscription__icon arrow_forward

mixin input_masked(name)
    input.input.input_masked(type="text" id="user_birthday" name=name placeholder="ДД.ММ.ГГГГ")